@model VietNamTourism.Models.Phanhoi

@{
    ViewData["Title"] = "ThemPhanHoi";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

</head>
<body>
    <div class="form-horizontal form-control" style="width:400px;height:420px;margin:20px auto">
        <h2 class="text-center">Thêm phản hồi</h2>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ThemPhanHoi">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Manguoidung" class="control-label"></label>
                        <input asp-for="Manguoidung" class="form-control" />
                        <span asp-validation-for="Manguoidung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Noidung" class="control-label"></label>
                        <input asp-for="Noidung" class="form-control" />
                        <span asp-validation-for="Noidung" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Trangthaiphanhoi" class="control-label"></label>
                        <input asp-for="Trangthaiphanhoi" class="form-control" />
                        <span asp-validation-for="Trangthaiphanhoi" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12" style="display:flex;justify-content:space-between">
                            <input type="submit" value="Lưu lại" class="btn btn-success" />
                            <a href="/TrangChu/" class="btn btn-outline-primary">Quay lại</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<style>
    body {
        background: url("https://bizweb.dktcdn.net/100/330/208/files/wallpaper-hd-4k-anime-landscape-wallpaper-4k-hd.jpg?v\\u003d1640829588677");
        background-size: cover;
        height: 100vh;
        width: 100%;
    }
</style>
