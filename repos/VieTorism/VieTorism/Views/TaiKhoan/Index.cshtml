@model IEnumerable<VieTorism.Models.Taikhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<p>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#basicModal" href="/TaiKhoan/Creat" class="btn btn-succes">
        Thêm mới
    </button>
    <div class="modal fade" id="basicModal" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm mới tài khoản
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="">
                        <div class="col-md-12">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="control-label">Tên đăng nhập</label>
                                    <input name="Tendangnhap" class="form-control" />
                                    <span name="Tendangnhap" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Mật khẩu</label>
                                    <input name="Matkhau" class="form-control" />
                                    <span name="Matkhau" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <br />
                                    <label class="control-label">Phân quyền : <i>2</i> </label>
                                    <input name="Role" class="form-control" value="2" type="hidden" />
                                </div>
                                <div class="form-group">
                                    <br />
                                    <label class="control-label">Trạng thái tài khoản : <i>1</i> </label>
                                    <input name="Trangthai" class="form-control" value="1" type="hidden" />
                                    <span name="Trangthai" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                    <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</p>

<table class="table table-bordered table-hover text-center " style="box-shadow:5px 10px 25px #f8fff0;font-size:16px">
    <thead>
        <tr>
            <th>
                Tên đăng nhập
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Phân quyền
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tendangnhap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Matkhau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td> 
                    <a href="/TaiKhoan/Edit?Tendangnhap=@item.Tendangnhap" class="btn btn-primary" >Sửa</a>
                    <a href="/TaiKhoan/Details?Tendangnhap=@item.Tendangnhap" class="btn btn-warning" >Chi tiết</a>
                <a href="/TaiKhoan/Delete?Tendangnhap=@item.Tendangnhap" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
