@model IEnumerable<VieTorism.Models.Danhmuc>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}
<nav class="d-flex justify-content-center">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/TrangChu/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
        <li class="breadcrumb-item active">Danh sách danh mục</li>
    </ol>
</nav>
<p>
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#basicModal" href="/DanhMuc/Creat" class="btn btn-succes">
        Thêm mới
    </button>
    <div class="modal fade" id="basicModal" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Thêm mới danh mục
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="">
                        <div class="row">
                            <div class="col-md-12">
                                <form asp-action="Creat">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <label name="Madanhmuc" class="control-label">Mã danh mục</label>
                                        <input name="Madanhmuc" class="form-control" />
                                        <span name="Madanhmuc" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label name="Tendanhmuc" class="control-label">Tên danh mục</label>
                                        <input name="Tendanhmuc" class="form-control" />
                                        <span name="Tendanhmuc" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label name="Trangthai" class="control-label">Trạng thái hiện tại</label>
                                        <input name="Trangthai" class="form-control" />
                                        <span name="Trangthai" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</p>
<table class="table table-bordered table-hover text-center " style="box-shadow:5px 10px 25px #f8fff0">
    <thead>
        <tr>
            <th>
                Mã danh mục
            </th>
            <th>
                Tên danh mục
            </th>
            <th>
                Trạng thái
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Madanhmuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tendanhmuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                    <a href="/DanhMuc/Edit?Madanhmuc=@item.Madanhmuc" class="btn btn-primary">Sửa</a>
                    <a href="/DanhMuc/Details?Madanhmuc=@item.Madanhmuc" class="btn btn-warning">Chi tiết</a>
                    <a href="/DanhMuc/Delete?Madanhmuc=@item.Madanhmuc" onclick="return confirmDelete();" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>




