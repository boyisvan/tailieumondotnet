@model VieTorism.Models.Danhmuc

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}

<nav class="d-flex justify-content-center">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/TrangChu/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="#">Danh mục</a></li>
        <li class="breadcrumb-item active">Chi tiết danh mục</li>
    </ol>
</nav>
<div>
    <h4>Chi tiết danh mục : @ViewBag.madanhmuc</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã danh mục
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Madanhmuc)
        </dd>
        <dt class = "col-sm-2">
           Tên danh mục
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tendanhmuc)
        </dd>
        <dt class = "col-sm-2">
            Trạng thái
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Trangthai)
        </dd>
    </dl>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-3" style="display:flex;justify-content:space-between">
        <input type="submit" value="Lưu lại" class="btn btn-success" />
        <a href="/DanhMuc/Index" class="btn btn-outline-primary">Quay lại</a>
    </div>
</div>

