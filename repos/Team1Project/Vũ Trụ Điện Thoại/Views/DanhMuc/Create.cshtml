@model Vũ_Trụ_Điện_Thoại.Models.DanhMuc

@{
    ViewData["Title"] = "Create";
}


<div class="form-horizontal form-control" style="width:350px;height:270px;margin:0 auto">
    <h4 class="text-center">Thêm mới danh mục</h4>
    <hr />
    <div class="col-md-10">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaDanhMuc" class="control-label"></label>
                <input asp-for="MaDanhMuc" class="form-control" />
                <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenDanhMuc" class="control-label"></label>
                <input asp-for="TenDanhMuc" class="form-control" />
                <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                <br />
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-8" style="display:flex;justify-content:space-between">
                    <input type="submit" value="Lưu lại" class="btn btn-success" />
                    <a href="/DanhMuc/Index" class="btn btn-outline-primary">Quay lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

